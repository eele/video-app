<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="edu.zhku.jsj144.lzc.video.activity.UploadChoiceActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/uploadToolbar"/>
    <GridLayout
            android:paddingLeft="6px"
            android:columnCount="3"
            android:horizontalSpacing="6px"
            android:verticalSpacing="10px"
            android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/imageViewGroup">

    </GridLayout>
</RelativeLayout>
